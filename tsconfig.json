{
    "compilerOptions": {
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": ["es2015", "dom"],
        "target": "es5",
        "module": "es2015",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "outDir": "cjs"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "cjs",
        "umd",
        "esm"
    ]
}
